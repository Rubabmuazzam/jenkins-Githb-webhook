pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build-backend') {
            steps {
                echo 'This satge will build the code.'
            }
        }
        stage('Build-frontend') {
            steps {
                bat 'This satge will build the code.'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Will Deply the code.'
            }
        }
        stage('Test') {
            steps {
                echo 'Tests will be executed in this stage'
            }
        }
        stage('Release') {
            steps {
                echo 'Release is done successfully'
            }
        }
    }
}
